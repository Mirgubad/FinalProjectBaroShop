<section class="h-100 h-custom">
    <div class="shopping-cart-header">
        <div class="header-inner">
            <h4><i class="fa fa-shopping-cart" aria-hidden="true"></i> Shopping Cart</h4>
            <h6 class="mb-0 text-muted">3 items</h6>
        </div>
    </div>
