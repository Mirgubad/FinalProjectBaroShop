@using Web.ViewModels.Components;
@model HeaderComponentVM;

@{
    foreach (var product in Model.Products)
    {
        <div class="search-result-item">
            <div class="search-result-img">
                <a asp-action="details" asp-controller="product" asp-route-id="@product.Id">
                    <img class="result-img" src="/assets/images/@product.MainPhoto" alt="" />
                </a>
            </div>
            <div class="item-info">
                <p title="@product.Title">
                    <strong>@product.Brand.Title</strong>
                    @product.Title
                </p>
                <span class="price">@product.Price$</span>
            </div>
        </div>
    }
}